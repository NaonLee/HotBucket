<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/as_custom_rating_bar_control</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">1</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:maxHeight">26dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CustomBigRatingBar">
        <item name="android:progressDrawable">@drawable/as_big_custom_rating_bar_control</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>